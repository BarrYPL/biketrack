<%= form_with(model: chain, class: "new-chain-form") do |form| %>
  <% if chain.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(chain.errors.count, "error") %> prohibited this chain from being saved:</h2>

      <ul>
        <% chain.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-field">
    <span><%= form.label :chain_name %></span>
    <%= form.text_field :chain_name, class: "form-control" %>
  </div>

  <div class="form-field">
    <span><%= form.label :chain_model %></span>
    <%= form.text_field :chain_model, class: "form-control" %>
  </div>

  <div class="form-field">
    <span><%= form.label :kmoffset %></span>
    <%= form.number_field :kmoffset, class: "form-control" %>
  </div>

  <div class="form-field">
  <span><%= form.label :vaxed_timestamp %></span>
  <%= form.datetime_field :vaxed_timestamp, class: "form-control" %>
  </div>

  <div class="form-field">
    <span><%= form.label :instalation_date %></span>
    <%= form.datetime_field :changed_timestamp, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :bike_id %>
    <%= form.select(
      :bike_id,
      options_for_select(Bike.all.map { |a| [a.bike_name, a.id] }, chain.bike_id),
      {},
      class: 'form-control') %>
  </div>

  <div>
    <%= form.submit "Save", class: "primary" %>
  </div>
<% end %>
