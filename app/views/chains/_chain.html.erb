<div id="<%= dom_id chain %>" class="chain-card" >
    <div class="chain-model"><h2><i class="fa-solid fa-link"></i> <%= @chain['chain_name'] %></h2></div>
    <% unless @chain['instalation_date'].nil? %>
    <div class="view-chain-stats">
        <div class="chain-stat"><span>Chain Model: </span><p><%= @chain['chain_model'] %></p></div>
        <div class="chain-stat"><span>Offset: </span><p><% if @chain['kmoffset'].nil? %> 0 <% else %> <%= @chain['kmoffset'] %> <% end %> km</p></div>
        <br>
        <div class="chain-stat"><span>Used Since: </span><p><%= @chain['instalation_date'].strftime("%d.%m.%yr.") %></p></div>
        <div class="chain-stat"><span>Total Kilometers: </span> xx km</div>
        <br>
        <div class="chain-stat"><span>Vaxed: </span><p><%= @chain['vaxed_timestamp'].strftime("%d.%m.%yr.") %></p></div>
        <div class="chain-stat"><span>Distance: </span><p><%= @distance %> km</p></div>
    </div>
    <% end %>
</div>

<div class="bike-km-chart">
    <h2>Wykres dla <%= @chain['chain_name'] %></h2>
    <%= line_chart @cumulative_rides, xtitle: "Day", ytitle: "Km", points: false, suffix: "km", colors: ["#73fd2e"], library: {backgroundColor: "#fff", color: "#73fd2e"}  %>
</div>