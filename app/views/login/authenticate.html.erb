<h1>User Profile</h1>
<% if @params.present? %>
    <div class="profile-card">
        <div class="profile-title">
            <h2><%= @txt %> <%= @curr_user_name %></h2>
            <p><%= @athlete_city %></p>
        </div>
        <%= image_tag @params['athlete']['profile'], class:"profile-img" %>
    </div>
    <div class="stat-container">
        <h2>Stats</h2>
    </div>
<% end %>
<%= link_to 'Home', homepage_path %>