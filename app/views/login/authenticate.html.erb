<h1>User Profile</h1>
<% if @params.present? %>
    <div class="profile-card">
        <div class="profile-title">
            <h2><%= @txt %> <%= @curr_user_name %></h2>
            <p><%= @athlete_city %></p>
        </div>
        <%= image_tag @params['athlete']['profile'], class:"profile-img" %>
    </div>
    <div class="stat-container">
        <div class="gallery js-flickity"
            data-flickity-options='{ "wrapAround": true }'>
            <div class="gallery-cell"><h2>Your Stats</h2></div>
            <div class="gallery-cell">2</div>
            <div class="gallery-cell">3</div>
            <div class="gallery-cell">4</div>
            <div class="gallery-cell">5</div>
        </div>
    </div>
<% end %>